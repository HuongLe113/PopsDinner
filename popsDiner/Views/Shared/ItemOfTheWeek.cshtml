@model Item
@using System.Globalization
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("C3",CultureInfo.CreateSpecificCulture("vn-VN"))</h3>
            <h3>
                <a asp-controller="Item" asp-action="Details" asp-route-id="@Model.ItemId">@Model.Name</a>
            </h3>
            <p>@Model.shortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="Home" asp-action="addshoppingCart"
                   asp-route-itemid="@Model.ItemId">Đặt hàng</a>
            </p>
        </div>
        
    </div>
</div>
