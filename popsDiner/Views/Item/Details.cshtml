@model Item
@using System.Globalization;
<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("C3",CultureInfo.CreateSpecificCulture("vn-VN"))</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.shortDescription</h4>
        <p>@Model.LongDescription</p>
        <p class="button">
            <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
               asp-route-itemId="@Model.ItemId">Đặt hàng</a>
        </p>
    </div>
</div>